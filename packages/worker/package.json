{
  "name": "@acme/worker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "db:generate": "drizzle-kit generate",
    "db:up": "drizzle-kit up",
    "db:studio:local": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:remote:dev": "cross-env USE_PROD_DB=false drizzle-kit studio",
    "db:studio:remote:prod": "cross-env USE_PROD_DB=true drizzle-kit studio",
    "cf:migrate:local": "wrangler d1 migrations apply worker-db-prod --local",
    "cf:migrate:remote:dev": "wrangler d1 migrations apply --env dev worker-db --remote",
    "cf:migrate:remote:prod": "wrangler d1 migrations apply worker-db-prod --remote",
    "cf:deploy:dev": "wrangler deploy --env dev --minify src/index.ts",
    "cf:deploy:prod": "wrangler deploy --minify src/index.ts",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.5"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@cloudflare/workers-types": "^4.20240605.0",
    "@types/node": "^20.12.9",
    "better-sqlite3": "^11.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.22.6",
    "eslint": "^9.4.0",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5",
    "wrangler": "^3.0.0"
  },
  "prettier": "@acme/prettier-config"
}
